= form_for(@work) do |f|
  - if @work.errors.any?
    #error_explanation
      %h2
        = pluralize(@work.errors.count, "error")
        prohibited this work from being saved:
      %ul
        - @work.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :url
    %br/
    = f.text_field :url
  .field
    = f.label :image_url
    %br/
    = f.text_field :image_url
  .actions
    = f.submit
